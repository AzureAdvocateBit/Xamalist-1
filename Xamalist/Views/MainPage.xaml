<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms" 
		prism:ViewModelLocator.AutowireViewModel="True" 
		x:Class="Xamalist.Views.MainPage" 
		Title="Xamalist"
	>
	<ContentPage.ToolbarItems>
		<!-- データ読み込みボタン -->
		<ToolbarItem Text="更新" Command="{Binding ReadAppDataCommand}" />
	</ContentPage.ToolbarItems>
	
	<!-- iOS のとき、上に 20px 余白 -->
	<ContentPage.Padding><OnPlatform x:TypeArguments="Thickness" iOS="0,20,0,0"></OnPlatform></ContentPage.Padding>

	<Grid>
		<StackLayout>
			<!-- データ一覧リスト -->
			<ListView ItemSelected="OnItemTapped" ItemsSource="{Binding AppDatas}">
				<ListView.ItemTemplate>
					<DataTemplate>
						<!-- メモ：ViewCell の中は複雑なレイアウトを組むことができる -->
						<ViewCell>
							<Label Text="{Binding Name}" />
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</StackLayout>

		<!-- 読み込み中はスピナーを表示する -->
		<ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
	</Grid>
	
</ContentPage>
