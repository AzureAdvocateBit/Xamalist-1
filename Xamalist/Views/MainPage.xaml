<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms" 
		prism:ViewModelLocator.AutowireViewModel="True" 
		x:Class="Xamalist.Views.MainPage" 
		Title="Xamalist"
	>
	<ContentPage.ToolbarItems>
		<!-- データ読み込みボタン -->
		<ToolbarItem Text="更新" Command="{Binding ReadAppDataCommand}" />
	</ContentPage.ToolbarItems>
	
	<!-- iOS のとき、上に 20px 余白 -->
	<ContentPage.Padding><OnPlatform x:TypeArguments="Thickness" iOS="0,20,0,0"></OnPlatform></ContentPage.Padding>

	<Grid>
		<StackLayout>
			<!-- データ一覧リスト -->
			<ListView ItemSelected="OnItemTapped" ItemsSource="{Binding AppDatas}" HasUnevenRows="True">
				<ListView.ItemTemplate>
					<DataTemplate>
						<!-- メモ：ViewCell の中は複雑なレイアウトを組むことができる -->
						<ViewCell>
							<!-- 一行 -->
							<StackLayout Orientation="Horizontal" Margin="2.5">
				                <Image Source="{Binding IconImageUrl}" 
				                       WidthRequest="60"
				                       HeightRequest="60"/>
				                <StackLayout HorizontalOptions="FillAndExpand">
									<Label Text="{Binding Name}"
				                         FontSize="18"
				                         FontAttributes="Bold"
				                         VerticalTextAlignment="Center"
				                         LineBreakMode="TailTruncation"/>
									<Label Text="{Binding Description}"
				                         VerticalTextAlignment="Center"/>
									
				                </StackLayout>
				                <Grid>
				                  <Grid.RowDefinitions>
				                    <RowDefinition Height="Auto" />
				                    <RowDefinition Height="Auto" />
				                  </Grid.RowDefinitions>
				                  <Grid.ColumnDefinitions>
				                    <ColumnDefinition Width="Auto" />
				                    <ColumnDefinition Width="Auto" />
				                  </Grid.ColumnDefinitions>
				                  <Image Source="androidEnable.png" 
				                       WidthRequest="20"
				                       HeightRequest="20"/>
				                  <Image Source="androidEnable.png" 
				                       	WidthRequest="20"
				                       	HeightRequest="20"
										Grid.Row="1"/>
				                  <Image Source="androidEnable.png" 
				                       	WidthRequest="20"
				                       	HeightRequest="20"
				                         Grid.Column="1"/>
				                  <Image Source="androidEnable.png" 
				                       	WidthRequest="20"
				                       	HeightRequest="20" 
				                         Grid.Row="1"
				                         Grid.Column="1"/>
				                </Grid>                
				              </StackLayout>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</StackLayout>

		<!-- 読み込み中はスピナーを表示する -->
		<ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
	</Grid>
	
</ContentPage>
